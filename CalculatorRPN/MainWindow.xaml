<Window x:Class="CalculatorRPN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorRPN"
        mc:Ignorable="d"
        Title="Калькулятор методом обратной Польской нотации" Height="450" Width="800"
        MinHeight="600"
        MinWidth="400"
        >

    <Window.Resources>
        <Style x:Key="txtInputExpression" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource btnForegroundNumberColor}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource btnForegroundNumberColor}"/>
        </Style>

        <Style x:Key="btnNumber" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="{StaticResource btnBackgroundNumberColor}"/>
            <Setter Property="Foreground" Value="{StaticResource btnForegroundNumberColor}"/>
            <Setter Property="BorderThickness" Value="0.4"/>
        </Style>

        <Style x:Key="btnOperation" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="{StaticResource btnBackgroundOperationColor}"/>
            <Setter Property="Foreground" Value="{StaticResource btnForegroundOperationColor}"/>
            <Setter Property="BorderThickness" Value="0.4"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <Grid Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBox 
                x:Name="txtInputExpression"
                Grid.Row="0"
                TextAlignment="Right"
                VerticalContentAlignment="Center"
                Style="{StaticResource txtInputExpression}"
                Text="{Binding Path=InputText}"
                />

            <DockPanel
                Grid.Row="2"
                >

                <TextBlock
                    Text="{Binding Path=RNPString}"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Center"
                    />
                
                <TextBlock
                    Text="{Binding Path=Result}"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"
                    TextAlignment="Right"
                    />
            </DockPanel>
        </Grid>
        
        

        <Button
            Content="C"
            Opacity="0.8"
            Command="{Binding Path=ClearCommand}"
            Grid.Column="0"
            Grid.Row="1"
            Style="{StaticResource btnOperation}"
            />
        
        <Button
            Content="("
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="("
            Grid.Column="1"
            Grid.Row="1"
            Style="{StaticResource btnOperation}"
            />
        <Button
            Content=")"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter=")"
            Grid.Column="2"
            Grid.Row="1"
            Style="{StaticResource btnOperation}"
            />
        
        <Button
            Content="/"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="/"
            Grid.Column="3"
            Grid.Row="1"
            Style="{StaticResource btnOperation}"
            />

        <Button
            Content="7"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="7"
            Grid.Column="0"
            Grid.Row="2"
            Style="{StaticResource btnNumber}"
            />
        
        <Button
            Content="8"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="8"
            Grid.Column="1"
            Grid.Row="2"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="9"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="9"
            Grid.Column="2"
            Grid.Row="2"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="*"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="*"
            Grid.Column="3"
            Grid.Row="2"
            Style="{StaticResource btnOperation}"
            />




        <Button
            Content="4"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="4"
            Grid.Column="0"
            Grid.Row="3"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="5"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="5"
            Grid.Column="1"
            Grid.Row="3"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="6"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="6"
            Grid.Column="2"
            Grid.Row="3"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="-"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="-"
            Grid.Column="3"
            Grid.Row="3"
            Style="{StaticResource btnOperation}"
            />

        <Button
            Content="3"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="3"
            Grid.Column="0"
            Grid.Row="4"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="2"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="2"
            Grid.Column="1"
            Grid.Row="4"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="1"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="1"
            Grid.Column="2"
            Grid.Row="4"
            Style="{StaticResource btnNumber}"
            />

        <Button
            Content="+"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="+"
            Grid.Column="3"
            Grid.Row="4"
            Style="{StaticResource btnOperation}"
            />

        <Button
            Content="^"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="^"
            Grid.Column="0"
            Grid.Row="5"
            Grid.ColumnSpan="1"
            Style="{StaticResource btnOperation}"
            />

        <Button
            Content="0"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="0"
            Grid.Column="1"
            Grid.Row="5"
            Grid.ColumnSpan="1"
            Style="{StaticResource btnNumber}"
            />


        <Button
            Content="%"
            Opacity="0.8"
            Command="{Binding Path=AddToInputCommand}"
            CommandParameter="%"
            Grid.Column="2"
            Grid.Row="5"
            Grid.ColumnSpan="1"
            Style="{StaticResource btnOperation}"
            />


        <Button
            Content="="
            Opacity="0.8"
            Command="{Binding Path=ResultCommand}"
            CommandParameter="{Binding ElementName=txtInputExpression, Path=Text}"
            Grid.Column="3"
            Grid.Row="5"
            Style="{StaticResource btnOperation}"
            />

    </Grid>
</Window>
